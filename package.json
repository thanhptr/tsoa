{
  "name": "tsoa",
  "description": "Build swagger-compliant REST APIs using TypeScript and Node",
  "version": "2.0.2",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "keywords": [
    "typescript",
    "swagger",
    "server",
    "node",
    "node.js",
    "codegen",
    "generation",
    "express",
    "hapi.js",
    "koa"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "yarn run clean && yarn run tsc && yarn run copy-templates && yarn run copy-types",
    "copy-types": "copyfiles -u 1 ./src/*.d.ts ./dist",
    "copy-templates": "copyfiles -u 1 ./src/routeGeneration/templates/**/* ./dist",
    "clean": "rimraf dist && rimraf tests/fixtures/*/routes.ts",
    "lint": "tslint --exclude ./node_modules/** ./src/**/*.ts ./tests/**/*.ts",
    "format": "tsfmt -r",
    "prepublish": "yarn run build",
    "deploy": "yarn version patch -m \"Release v%s\" && yarn publish",
    "preversion": "yarn test",
    "postversion": "git push origin master && git push --follow-tags",
    "routes-gen": "node ./dist/cli.js routes",
    "swagger-gen": "node ./dist/cli.js swagger",
    "routes-gen:hapi": "node ./dist/cli.js routes --configuration=hapi-tsoa.yaml",
    "routes-gen:koa": "node ./dist/cli.js routes --configuration=koa-tsoa.json",
    "routes-gen:custom": "node ./dist/cli.js routes --configuration=custom-tsoa.json",
    "routes-gen:inversify": "node ./dist/cli.js routes --configuration=inversify-tsoa.json",
    "pretest": "cross-env NODE_ENV=test yarn run build && yarn run swagger-gen && cross-env NODE_ENV=test yarn run routes-gen && cross-env NODE_ENV=test yarn run routes-gen:hapi && cross-env NODE_ENV=test yarn run routes-gen:koa && cross-env NODE_ENV=test yarn run routes-gen:custom && cross-env NODE_ENV=test yarn run routes-gen:inversify && yarn run lint",
    "test": "cross-env NODE_ENV=test mocha **/*.spec.ts --compilers ts:ts-node/register",
    "tsc": "tsc"
  },
  "author": "Luke Autry <lukeautry@gmail.com> (http://www.lukeautry.com)",
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.0.10",
    "handlebars-helpers": "^0.9.5",
    "lodash.indexof": "^4.0.5",
    "lodash.map": "^4.6.0",
    "merge": "^1.2.0",
    "minimatch": "^3.0.4",
    "moment": "^2.18.1",
    "typescript": "^2.7.1",
    "typescript-formatter": "^7.0.1",
    "validator": "^8.0.0",
    "yamljs": "^0.3.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^3.5.2",
    "@types/express": "^4.0.36",
    "@types/handlebars": "^4.0.35",
    "@types/hapi": "^16.1.7",
    "@types/koa": "^2.0.38",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-router": "^7.0.22",
    "@types/method-override": "^0.0.29",
    "@types/mime": "^1.3.1",
    "@types/minimatch": "^3.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.17",
    "@types/serve-static": "^1.7.31",
    "@types/superagent": "^2.3.1",
    "@types/supertest": "^2.0.2",
    "@types/validator": "^6.2.1",
    "@types/yamljs": "^0.2.30",
    "@types/yargs": "^8.0.1",
    "body-parser": "^1.17.2",
    "chai": "^4.1.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "express-serve-static-core": "^0.1.1",
    "hapi": "^16.5.0",
    "inversify": "^4.3.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "method-override": "^2.3.9",
    "mocha": "^3.4.2",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukeautry/tsoa.git"
  },
  "bin": {
    "tsoa": "dist/cli.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
